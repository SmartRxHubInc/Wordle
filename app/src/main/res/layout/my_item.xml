                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/editText6"
                    style="@style/boxes"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@drawable/border"
                    android:backgroundTint="@color/grey"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLength="1"
                    android:longClickable="false"
                    android:padding="@dimen/padding_large"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey_100"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_xsmall"

                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cardView7"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/editText7"
                    style="@style/boxes"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@drawable/border"
                    android:backgroundTint="@color/grey"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLength="1"
                    android:padding="@dimen/padding_large"
                    android:longClickable="false"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey_100"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tick"
            android:layout_gravity="center"
            android:padding="5dp"
            android:visibility="gone"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_filter"
            style="@style/regular_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:background="@drawable/button_bg"
            android:paddingLeft="@dimen/padding_big"
            android:paddingTop="@dimen/padding_xlarge"
            android:paddingRight="@dimen/padding_big"
            android:paddingBottom="@dimen/padding_xlarge"
            android:text="@string/filter_title"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_gravity="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/rv_filter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_word" />


    </LinearLayout>
</layout>